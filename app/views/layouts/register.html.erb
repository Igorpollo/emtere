<html lang="en">
  <head
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>Admin | Espaço Médico</title>

    <!-- Bootstrap core CSS -->
    <link href="https://getbootstrap.com/docs/4.1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="https://getbootstrap.com/docs/4.1/examples/sign-in/signin.css" rel="stylesheet">
  </head>

  <body class="text-center">
    <form class="form-signin" action="/users" method="post" enctype="multipart/form-data">
    <%= token_tag %>
      <img class="mb-4" src="/assets/URSO_EDITADO.png" alt="" width="150">
      <h4 class=" mb-3 font-weight-normal">Administrativo Espaço Médico</h4>
      <label for="inputEmail" class="sr-only">Email</label>
      <input type="email" id="inputEmail" name="user[email]" class="form-control" placeholder="Email" required autofocus>
      <label for="inputPassword" class="sr-only">Senha</label>
      <input type="password" name="user[password]" id="inputPassword" class="form-control" placeholder="Senha" required>
      <label for="inputEmail" class="sr-only">Nome</label>
      <input type="text" name="user[nome]" class="form-control" placeholder="Nome" required>
            <label for="inputEmail" class="sr-only">Especialidade</label>
      <input type="text" name="user[especialidade]" class="form-control" placeholder="Especialidade" required>
            <label for="inputEmail" class="sr-only">CRM</label>
      <input type="text" name="user[crm]" class="form-control" placeholder="CRM" required >
            <label for="inputEmail" class="sr-only">Resumo</label>
      <textarea name="user[resumo]" class="form-control" placeholder="Escreva um resumo sobre você" required></textarea>
      <label for="file" class="sr-only">Foto</label>
      <p>Insira sua foto</p>
      <input type="file" id="file" name="user[avatar]" class="form-control" placeholder="Insira sua foto" required >

      <div class="checkbox mb-3">
        <label>
          <input name="user[remember_me]" type="checkbox" value="remember-me"> Lembrar
        </label>
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
      <p style="margin-top: 30px;"><a href="#">Registrar</a></p>
    </form>
  </body>
</html>
